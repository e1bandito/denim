mixin card(item)
  a.card(href= item.path class= item.mod)
    .card__img
      picture
        source(type="image/webp" srcset="img/" + item.name + "@2x.webp 2x,  img/" + item.name + ".webp 1x")/
        source(type="image/webp" srcset="img/" + item.name + "@2x.jpg 2x,  img/" + item.name + ".jpg 1x")/
        img(src="img/" + item.name + ".jpg" alt= item.alt)
    p.card__item-title= item.title
    if item.price
      p.card__price= item.price
