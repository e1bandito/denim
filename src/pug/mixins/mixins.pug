mixin icon(iconName)
  svg&attributes(attributes)
    use(xlink:href=`img/sprite.svg#icon_${iconName}`)

mixin picture(name, alt, type)
  picture
    source(type="image/webp" srcset="img/" + name + "@2x.webp 2x,  img/" + name + ".webp 1x")/
    source(type="image/webp" srcset="img/" + name + "@2x." + type + " 2x,  img/" + name + "." + type)/
    img(src="img/" + name + "." + type alt= alt)
